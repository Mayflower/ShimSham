<%= nav_bar :static => :top, :brand => 'Shim Sham', :responsive => true do %>
    <%= menu_group do %>
        <%= menu_divider %>
        <% if user_signed_in? %>
            <% if current_user.has_role?(:admin) %>
                <%= drop_down 'Administrate' do %>
                    <%= menu_item 'Dance Classes', dance_classes_path %>
                    <%= menu_item 'Students', students_path %>
                    <%= menu_item 'Instructors', instructors_path %>
                    <%= menu_item 'Groups', groups_path %>
                    <%= menu_item 'Rooms', rooms_path %>
                    <%= menu_item 'Lessons', lessons_path %>
                <% end %>
            <% end %>
            <%= menu_item 'Log out', destroy_user_session_path, :method => 'delete' %>
        <% else %>
            <%= menu_item 'Login', new_user_session_path %>
        <% end %>
    <% end %>
<% end %>
