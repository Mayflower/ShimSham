<h1>Listing Lessons</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Danceclass</th>
      <th>Students</th>
      <th>Instructors</th>
      <th>Scheduled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.dance_class.name %></td>
        <td><%= lesson.students.count %></td>
        <td><%= lesson.instructors.count %></td>
        <td><%= lesson.scheduled %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
