<h1>Listing lessons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.dance_class.name%></td>
        <td>
          <table>
              <%= lesson.instructors.each do |instructor| %>
                <tr><td><%= instructor.name %></td></tr>
              <% end %>
          </table>
        </td>
        <td>
          <table>
              <%= lesson.students.each do |student| %>
                <tr><td><%= student.name %></td></tr>
              <% end %>
          </table>
        </td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
